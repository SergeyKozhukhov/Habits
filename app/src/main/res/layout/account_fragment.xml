<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="64dp"
        android:paddingBottom="64dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_user"
            android:paddingBottom="32dp"
            android:transitionName="shared_icon_auth_image_view" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="64dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/backup_button"
            style="@style/style_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_upload"
            android:text="Резервное копирование" />

        <Button
            android:id="@+id/replication_button"
            style="@style/style_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_download"
            android:text="Восстановление данных" />

        <Button
            android:id="@+id/logout_button"
            style="@style/style_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_exit"
            android:text="Выход из аккаунта" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/account_loading_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center" />
    </FrameLayout>


</FrameLayout>