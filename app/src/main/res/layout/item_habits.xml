<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/host_habit_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/colorBackground"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:elevation="8dp">

    <RelativeLayout
        android:id="@+id/habit_item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:alpha="1.0">


        <TextView
            android:id="@+id/title_habit_text_view"
            style="@style/style_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_medal"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="36sp"
            tools:text="title" />

        <TextView
            android:id="@+id/start_date_habit_text_view"
            style="@style/style_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_habit_text_view"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_calendar"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="22sp"
            tools:text="start date" />


        <TextView
            android:id="@+id/description_habit_text_view"
            style="@style/style_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_date_habit_text_view"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/ic_title"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:textAlignment="inherit"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="24sp"
            tools:text="description" />

        <TextView
            android:id="@+id/id_habit_text_view"
            style="@style/style_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_habit_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="â„–"
            android:textSize="12sp"
            tools:text="1" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>