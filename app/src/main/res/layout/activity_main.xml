<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/host_fragment_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:id="@+id/guide_app_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/open_auth_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="auth"/>

        <Button
            android:id="@+id/open_habits_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="habitData"/>

        <Button
            android:id="@+id/open_add_habit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add_habit"/>


    </LinearLayout>










</LinearLayout>