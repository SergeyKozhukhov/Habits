<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_goal_cloud" />

    <Button
        android:id="@+id/registration_account_button"
        style="@style/style_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/authentication_account_button"
        android:layout_centerHorizontal="true"
        android:text="РЕГИСТРАЦИЯ"
        android:textSize="22sp" />

    <!--android:background="@android:color/transparent"-->

    <Button
        android:id="@+id/authentication_account_button"
        style="@style/style_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="АВТОРИЗАЦИЯ"
        android:textSize="22sp" />

</RelativeLayout>